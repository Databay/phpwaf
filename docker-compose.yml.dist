version: '3.9'

services:
  app:
    image: webdevops/php-nginx:8.2
    restart: on-failure
    container_name: waf
    ports:
      - "9000:80"
      - "9443:443"
    volumes:
      - .:/app
    working_dir: /app
    environment:
      WEB_DOCUMENT_ROOT: /app/src
      WEB_DOCUMENT_INDEX: waf.php
      XDEBUG_CLIENT_HOST: host.docker.internal
      PHP_DATE_TIMEZONE: Europe/Berlin
    deploy:
      resources:
        limits:
          memory: 256M